<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\TestMVCServer.Server\TestMVCServer.Server.csproj" />
  </ItemGroup>

	<ItemGroup>
		<Content Include="Views\**\*.*">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	
		<Content Include="wwwroot\**\*.*">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Views\Animals\Layout.cshtml" />
	  <None Remove="Views\Animals\Wild\Bunnies.cshtml" />
	  <None Remove="Views\Animals\Wild\Cats.cshtml" />
	  <None Remove="Views\Animals\Wild\Turtles.cshtml" />
	  <None Remove="Views\Cats\Create.cshtml" />
	  <None Remove="Views\Dogs\Create.cshtml" />
	  <None Remove="Views\Home\StaticFiles.cshtml" />
	  <None Remove="wwwroot\img\cat.jpg" />
	</ItemGroup>

	<ItemGroup>
	  <Content Update="Views\Animals\Cats.cshtml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	  <Content Update="Views\Animals\Rabbits.cshtml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	  <Content Update="Views\Animals\Dogs.cshtml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	  <Content Update="Views\Animals\Wild\Turtles.cshtml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

	<ItemGroup>
	  <None Update="Views\Animals\Dogs.cshtml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>
