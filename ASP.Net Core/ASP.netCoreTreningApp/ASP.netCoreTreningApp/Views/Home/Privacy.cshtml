@using ASP.netCoreTreningApp.Models.Privacy
@model PrivacyFormModel

@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

@*@using (Html.BeginForm())
    {
    @this.Html.EditorForModel()
    }*@

<partial name="_HomePageStart">
    </>

    <form>
        <input asp-for="FirstName"></>
        <input asp-for="LastName"></>
        <input asp-for="Age"></>
        <textarea asp-for="Description"></textarea>
    </form>

    <div>
        <h1>@Model.FirstName @Model.LastName</h1>
        <h2>@Model.Age</h2>
        <p>@Model.Description</p>
    </div>

    <p>Use this page to detail your site's privacy policy.</p>

    @section Scripts {

    <div id="mapdiv" style="width: 500px; height: 400px;"></div>
    <script src="https://openlayers.org/api/2.13.1/OpenLayers.js"></script>
    <script>

        map = new OpenLayers.Map("mapdiv");
        map.addLayer(new OpenLayers.Layer.OSM());

        var lonLat = new OpenLayers.LonLat( -0.1279688 ,51.5077286 )
              .transform(
                new OpenLayers.Projection("EPSG:4326"), // transform from WGS 1984
                map.getProjectionObject() // to Spherical Mercator Projection
              );

        var zoom=16;

        var markers = new OpenLayers.Layer.Markers( "Markers" );
        map.addLayer(markers);

        markers.addMarker(new OpenLayers.Marker(lonLat));

        map.setCenter (lonLat, zoom);
    </script>
    }
